{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "Node",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example", "rollup.config.js"]
}
